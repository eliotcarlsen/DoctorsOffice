<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Doctor's Office</title>
  </head>
  <body>
    <div class="container">
      <form action="/adddoctor" method="post">
        <label for="doctorname">Enter the Doctor</label>
        <input type="text" name="doctorname">
        <label for="doctorspecialty">Enter their specialty</label>
        <input type="text" name="doctorspecialty">
        <button type="submit" name="button">Enter</button>
      </form>
      {% if results is not empty %}
        {% for result in results %}
          <li><a href="/doctors/{{ result.id }}">{{ result.name }}</a></li>
        {% endfor %}
      {% endif %}

    </div>
  </body>
</html>
